  "action": [
    {
      "title": "Derivaciones Complementarias",
      "description": "Camino de derivaciones complementarias multi-especialidad. Se activa cuando: Score Global < 40 OR múltiples dimensiones < 50 OR hallazgos específicos en estudios iniciales.",
      "code": [
        {
          "coding": [
            {
              "system": "http://snomed.info/sct",
              "code": "3457005",
              "display": "Patient referral"
            }
          ]
        }
      ],
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "description": "Score Global < 40 OR múltiples dimensiones con scores bajos",
            "language": "text/fhirpath",
            "expression": "(%resource.item.answer.valueInteger.sum() / 8) < 40"
          }
        }
      ],
      "groupingBehavior": "logical-group",
      "selectionBehavior": "all",
      "action": [
        {
          "title": "Consultas por Derivación",
          "description": "Consultas con especialistas complementarios según perfil de riesgo y hallazgos.",
          "groupingBehavior": "logical-group",
          "selectionBehavior": "all",
          "action": [
            {
              "id": "other-consult-nephrology",
              "title": "Consulta con Nefrología",
              "description": "Derivación a nefrología. Condicional: creatinina elevada o TFGe < 60 en estudios de laboratorio.",
              "priority": "routine",
              "extension": [
                {
                  "url": "https://epa-bienestar.com.ar/fhir/StructureDefinition/study-priority",
                  "valueCode": "condicional"
                }
