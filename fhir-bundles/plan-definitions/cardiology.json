          {
            "title": "Derivación Cardiológica",
            "description": "Camino completo de cardiología. Se activa cuando: Presión Arterial < 60 OR Colesterol < 50 OR Score Global < 50.",
            "code": [
              {
                "coding": [
                  {
                    "system": "http://snomed.info/sct",
                    "code": "306253008",
                    "display": "Referral to cardiologist"
                  }
                ]
              }
