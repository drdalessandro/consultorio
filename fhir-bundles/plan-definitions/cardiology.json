            "condition": [
              {
                "kind": "applicability",
                "expression": {
                  "description": "PA < 60 OR Colesterol < 50 OR Score Global < 50",
                  "language": "text/fhirpath",
                  "expression": "%resource.item.where(linkId='blood-pressure').answer.valueInteger < 60 or %resource.item.where(linkId='blood-lipids').answer.valueInteger < 50 or (%resource.item.answer.valueInteger.sum() / 8) < 50"
