                "selectionBehavior": "all",
                "action": [
                  {
                    "id": "endo-consult-eval",
                    "title": "Consulta endocrinológica de evaluación",
                    "description": "Primera consulta con endocrinólogo para evaluación metabólica integral.",
                    "priority": "routine",
