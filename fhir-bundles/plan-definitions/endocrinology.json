        "action": [
          {
            "title": "Derivación Endocrinológica",
            "description": "Camino completo de endocrinología. Se activa cuando: Glucemia < 50 OR IMC/Peso < 50 OR Score Global < 45.",
            "code": [
              {
                "coding": [
                  {
                    "system": "http://snomed.info/sct",
                    "code": "306117001",
                    "display": "Referral to endocrinologist"
                  }
                ]
              }
            ],
            "condition": [
              {
                "kind": "applicability",
                "expression": {
                  "description": "Glucemia < 50 OR IMC/Peso < 50 OR Score Global < 45",
                  "language": "text/fhirpath",
                  "expression": "%resource.item.where(linkId='blood-glucose').answer.valueInteger < 50 or %resource.item.where(linkId='weight-bmi').answer.valueInteger < 50 or (%resource.item.answer.valueInteger.sum() / 8) < 45"
                }
              }
            ],
            "groupingBehavior": "logical-group",
            "selectionBehavior": "all",
            "action": [
              {
                "title": "Consultas Endocrinológicas",
                "description": "Consultas con endocrinología: evaluación metabólica, control con resultados, seguimiento nutricional y evaluación tiroidea.",
